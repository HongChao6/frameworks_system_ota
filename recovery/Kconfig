#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config SERVICES_RECOVERY
	tristate "Recovery service"
	default n
	---help---
		Enable the recovery service

if SERVICES_RECOVERY

config SERVICES_RECOVERY_PROGNAME
	string "Program name"
	default "recovery"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config SERVICES_RECOVERY_PRIORITY
	int "Recovery task priority"
	default 100

config SERVICES_RECOVERY_STACKSIZE
	int "Recovery stack size"
	default DEFAULT_TASK_STACKSIZE

endif
